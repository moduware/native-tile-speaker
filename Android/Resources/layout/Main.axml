<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/backgroundcolor"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="72dip"
        android:orientation="vertical">
        <TextView
            android:id="@+id/instructionText"
            android:text="Tap to turn on or off the speaker."
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="14dip"
            android:gravity="center"
            android:paddingBottom="50dip"
            android:textColor="@color/instructiontextcolor" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/speaker_button_off"
            android:background="@null"
            android:id="@+id/speaker_button" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="28dip"
        android:paddingRight="20dip"
        android:background="@color/bottombarcolor"
        android:layout_height="72dip"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/defaultStateText"
            android:text="Turn on when plugged in"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:textSize="16dip"
            android:gravity="start|center_vertical"
            android:textColor="#fff" />
        <Switch
            android:id="@+id/defaultSwitch"
            android:layout_alignParentRight="true"
            android:showText="false"
            android:track="@mipmap/track"
            android:thumb="@mipmap/knob"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
    </RelativeLayout>
</RelativeLayout>